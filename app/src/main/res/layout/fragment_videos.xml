<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    tools:context="com.example.user.sg50app.PhotosFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <ProgressBar
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="gone"
            android:id="@+id/vidsLoadingPb"
            android:gravity = "center_vertical|center_horizontal"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/vidListView"
            android:layout_gravity="center"
            android:listSelector="@android:color/transparent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/themeTextView"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This week&apos;s theme: Unity"
            android:id="@+id/themeTextView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:padding="18dp"
            android:background="@color/red"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/multiple_actions2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            fab:fab_addButtonColorNormal="@color/red"
            fab:fab_addButtonColorPressed="@color/dark_red"

            android:tint="@android:color/white"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp">
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_a2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/light_red"
            fab:fab_title="Post New"
            android:src="@drawable/cameraoutline"
            fab:fab_colorPressed="@color/red"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/light_red"
            fab:fab_title="Search"
            android:src="@drawable/search"
            fab:fab_colorPressed="@color/red"
            android:tint="@android:color/white"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_c2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/light_red"
            fab:fab_title="Post New"
            fab:fab_colorPressed="@color/red"
            android:src="@drawable/sort"
            android:tint="@android:color/white"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    </RelativeLayout>

</LinearLayout>